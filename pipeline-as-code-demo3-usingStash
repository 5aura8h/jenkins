pipeline {
    
    agent none
    
    tools {
        maven "maven3"
    }
    
    stages {
        
        stage('gitscm') {
            
            agent {
                label 'mavendocker'
            }
            steps  {
             echo "git downloading ..."
             git 'https://github.com/vimallinuxworld13/simple-java-maven-app.git'
             sh "ls -l"
             sh "pwd"
             stash includes: '*' , name: 'myapp'
             
             
            }
            
        }
        stage('build') {
            
            agent {
                label 'mavendocker'
                
            }
            
            steps  {
             sh 'mvn package'   
            }
            
        }
        stage('test') {
            
            agent {
                label 'mavendocker'
            }
            
            steps  {
             sh 'java -jar target/*.jar'   
            }
            
        }
        
    }
}
